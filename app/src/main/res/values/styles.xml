<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="Widget.AppTheme.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation">0dp</item>
        <item name="android:titleTextAppearance">@style/TextAppearance.AppTheme.ToolbarTitle</item>
        <item name="buttonGravity">center_vertical</item>
    </style>

    <style name="TextAppearance.AppTheme.ToolbarTitle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="AppTheme.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.MuscleGroupTitle" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="MuscleItemButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="colorPrimary">@color/toolbarIconColor</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

    </style>

</resources>